{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    //"noUnusedParameters": true, # somehow lints libs and fails because of it
    "noFallthroughCasesInSwitch": true
  },
  "include": ["web-app"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
